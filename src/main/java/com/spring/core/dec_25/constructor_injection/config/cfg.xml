<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!--constructor-inject-->
    <bean class="com.spring.core.dec_25.constructor_injection.entity.User" name="user">
        <constructor-arg name="userId" value="1231"/>
        <constructor-arg name="userName" value="Rohan Pathak"/>
        <constructor-arg name="userAddress" value="Bangalore"/>
    </bean>

</beans>